<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.devMode" value="false"/>


    <package name="default" namespace="/" extends="struts-default">
        <action name="Register" method="register"  class="action.UserAction">
            <result name="success">/Page/Login.jsp</result>
            <result name="input">/Page/Register.jsp</result>
        </action>
        <action name="Login" method="login" class="action.UserAction">
            <result name="success">/Page/UserFace.jsp</result>
            <result name="input"></result>
        </action>
        <action name="Logout" method="logout" class="action.UserAction">
            <result name="success">/index.html</result>
            <result name="input"></result>
        </action>
        <action name="Logoff" method="logoff" class="action.UserAction">
            <result name="success">/index.html</result>
            <result name="input"></result>
        </action>
        <action name="ChangePassword" method="changePassword" class="action.UserAction">
            <result name="success">/Page/UserFace.jsp</result>
            <result name="input"></result>
        </action>
        <action name="RecoverPassword" method="recoverPassword" class="action.UserAction">
            <result name="success">/Page/Login.jsp</result>
            <result name="input"></result>
        </action>
        <action name="CheckUser" method="checkUser" class="action.UserAction">
            <result name="success">/Page/UserInfo.jsp</result>
            <result name="input"></result>

        </action>


        <action name="MyItem" method="myItem" class="action.ItemAction">
            <result name="success">/Page/MyItem.jsp</result>
            <result name="input"></result>
        </action>
        <action name="ItemInfo" method="itemInfo" class="action.ItemAction">
            <result name="success">/Page/ItemInfo.jsp</result>
            <result name="input"></result>
        </action>
        <action name="AddItem" method="addItem" class="action.ItemAction">
            <result name="success" type="chain">MyItem</result>
            <result name="input">/Page/AddItem.jsp</result>
        </action>
        <action name="RemoveItem" method="deleteItem" class="action.ItemAction">
            <result name="success" type="chain">MyItem</result>
            <result name="input">/Page/MyItem.jsp</result>
        </action>
        <action name="ItemInfo" method="itemInfo" class="action.ItemAction">
            <result name="success">/Page/ItemInfo.jsp</result>
            <result name="input">/Page/MyItem.jsp</result>
        </action>
        <action name="SearchItem" method="searchItem" class="action.ItemAction">
            <result name="success">/Page/SearchResult.jsp</result>
            <result name="input">/Page/UserFace.jsp</result>
        </action>
        <action name="Deal" method="deal" class="action.ItemAction">
            <result name="success" type="chain">MyItem</result>
            <result name="input">/Page/ItemInfo.jsp</result>
        </action>


        <action name="BuyRecord" method="ShowRecord" class="action.DealRecordAction">
            <result name="success">/Page/DealList.jsp</result>
            <result name="input"></result>
        </action>


        <action name="AddComment" method="addComment" class="action.CommentAction">
            <result name="success" type="redirect">
                ItemInfo?item.itemId=${#session.item.itemId}
            </result>
            <result name="input"></result>
        </action>
        <action name="DeleteComment" method="deleteComment" class="action.CommentAction">
            <result name="success" type="redirect">
                ItemInfo?item.itemId=${#session.item.itemId}
            </result>
            <result name="input"></result>
        </action>


        <action name="EditItem" method="editInit" class="action.ItemAction">
            <result name="success">/Page/EditItem.jsp</result>
            <result name="input"></result>
        </action>

        <action name="SubmitChange" method="submitChange" class="action.ItemAction">
            <result name="success" type="chain">MyItem</result>
            <result name="input"></result>
        </action>


    </package>

    <include file="struts-default.xml"/>
</struts>
